<h1 align="center">Welcome to <%= @user.username %>'s page</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center user-image">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<% if logged_in? && current_user == @user %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= link_to 'Edit user details', edit_user_path(@user), class: 'btn btn-xs btn-primary' %>
    </div>
  </div>
<% end %>

<h4 align="center"><%= @user.username %>'s articles</h4>
<div align="center">
  <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<div align="center">
  <%= will_paginate @user_articles %>
</div>